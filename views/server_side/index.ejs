<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title>Hello World!</title>
  <meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale = 1.0, user-scalable=no">
  <script src='jquery/jquery.js'></script>

  <!-- <link rel="stylesheet" type="text/css" href="bootstrap/css/bootstrap.css">
  <script src='bootstrap/js/bootstrap.js'></script> -->
  <!--import semantic lib -->
  <link rel="stylesheet" type="text/css" href="semantic-ui/semantic.css">
  <script src='semantic-ui/semantic.js'></script>
  <!-- import main js file -->
  <script src="main.js"></script>
  <!-- import main css file  -->
  <link rel="stylesheet" type="text/css" href="main.css">
  <!-- import socket io  -->
  <script src="socket.io/socket.io.js"></script>
  <!-- import pdfjs librery -->
  <script src="assets/pdfjs/pdf.js" ></script>
  <script src="assets/pdfjs/pdf.worker.js" ></script>


</head>

<body>

  <div class="ui sidebar inverted vertical menu ">
    <!-- To add new items here-->
    <div class="ui header"></div>

    <a class="item" id="device_productSub"></a>
    <a class="item" id="showUploadDocumentForm">Upload new file</a>
    <a class="item" id="showFilesHistory">Show uploaded files</a>


  </div>
  <div class="pusher">

    <div class="ui segments  black ">
      <div class="ui segment left inverted black">
        <h1 class="ui header center alinged centered"><%- pagetitle %></h1>
      </div>

           <div class="ui progress bottom attached indicating " id="uploadProgress" style="display: none">
        <div class="bar"></div>
      </div>
    </div>

    <div class="ui container">
      <div class="segments piled ui horizontal">
        <div class="ui segment clearing ">
          <div class="ui button red  left floated" onclick="$('.ui.sidebar').sidebar('toggle');">Show Sidbar Menu</div>
        </div>
        <div class="ui segment right floated ">
          <div class="ui red ribbon label">Hostname :
          </div>
          <span><%- protocol  %>://<%- hostname %>:<%- portinuse %>/<%-route%></span>
        </div>
        <div class="ui segment">
          <span>You are in Page : <span class="" id="pageTitle"></span></span>
        </div>
      </div>

      <div class="ui container fluid" id="loadPagesSection">

      </div>

    </div>
  </div>
  </div>
</body>
<script>
  var pagetitle = '<%- pagetitle %>';
  var hostname = '<%- hostname %>';
  var protocol = '<%- protocol %>';
  var portinuse = '<%- portinuse %>';
  </script>

</html>